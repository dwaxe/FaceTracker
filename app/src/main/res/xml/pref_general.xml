<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:key="blinkProof"
        android:title="Blink Proofing"
        android:summary="Quickly retake a picture if someone happens to blink."
        android:defaultValue="true" />

    <ListPreference
        android:key="minFaces"
        android:title="Number of Faces"
        android:summary="Wait for the the phone to detect at least this many faces before taking a picture."
        android:defaultValue="1"
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values"
        />

    <com.google.android.gms.samples.vision.face.facetracker.SeekBarPreference
        android:key="smileThreshold"
        android:title="Smile Enthusiasm"
        android:summary="How big are your smiles? Set the minimum threshold for taking a picture."
        android:dialogMessage="On a scale of Kanye to the Joker..."
        android:defaultValue="80"
        android:text=""
        android:max="100"
        />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="example_text"
        android:title="@string/pref_title_display_name"
        android:defaultValue="@string/pref_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="example_list"
        android:title="@string/pref_title_add_friends_to_messages"
        android:defaultValue="-1"
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
